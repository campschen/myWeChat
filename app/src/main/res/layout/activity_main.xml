<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.camps.frame.widgets.recyclerview.PullToRefreshRecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_FFFFFF" />

        <include layout="@layout/include_title_bar_view" />

    </FrameLayout>


    <ch.ielse.view.imagewatcher.ImageWatcher
        android:id="@+id/iv_img_wathcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.camps.frame.widgets.emoji.EmojiPanelView
        android:id="@+id/epv_emoji_panel_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" />

</FrameLayout>